                    <field name="expenses_type" widget="selection"/>

                    <field name="amount" widget="badge" decoration-info="amount &gt; 0" sum="total amount"/>
                    <field name="create_uid"  readonly="1" widget="many2one_avatar_user"/>

                </tree>
            </field>
        </record>



