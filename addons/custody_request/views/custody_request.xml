        <record id="custody_request_search" model="ir.ui.view">
            <field name="name">custody.request.search</field>
            <field name="model">custody.request</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <!--<field name="currency_id"/>-->
                    <field name="amount"/>
                    <!--<filter string="Today" name="today" domain="[('custody_date','=',Datetime.now())]"/>-->
                    <filter string="My Petty cash" name="my_petty_cash" domain="[('user_name.user_id','=', uid)]"/>
                </search>
            </field>
        </record>

        <record id="expenses_line_search" model="ir.ui.view">
            <field name="name">expenses.line.search</field>
            <field name="model">expenses.line</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name" />
                    <!--<field name="currency_id"/>-->
                    <field name="amount"/>
                    <!--<filter string="Today" name="today" domain="[('custody_date','=',Datetime.now())]"/>-->
                    <filter string="My expenses" name="my_expenses" domain="[('create_uid','=', uid)]"/>
                </search>
            </field>
        </record>


        <record id="custody_request_tree" model="ir.ui.view">
            <field name="name">custody.request.tree</field>
